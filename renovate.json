	"$schema": "https://json.schemastore.org/renovate.json",
	"extends": ["config:base"],
	"schedule": ["every weekday"],
	"semanticCommits": "enabled",
	"ignorePeerDeps": true,
	"pinVersions": false,
	"packageRules": [
