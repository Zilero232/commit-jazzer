{
	"language": "en,ru",
	"files": ["**/*.{ts,tsx,js,jsx}"],
	"minWordLength": 3,
	"ignorePaths": [
		"**/*spec.*",
		"package.json",
		"renovate.json",
		"./cache",
		"./public",
		"./src/translations",
		"./src/constants/emojiCommit.ts",
		"./src/types/modules/actions.ts",
		"./lib/BadWordFilter/constants/badWords.ts"
	],
	"dictionaries": ["en_US", "ru_RU"],
	"import": ["@cspell/dict-ru_ru/cspell-ext.json"],
	"ignoreWords": ["zilero"],
	"useGitignore": true,
	"words": ["splited", "Zod", "maxlength", "esmodules", "knip"]
}
